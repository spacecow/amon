<% title "Users" %>
<% subtitle "List of user accounts" %>

<table>
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td>
					<%= link_to "Edit", edit_admin_user_path(user) %>
					<%= link_to "Delete", admin_user_path(user), :method => :delete, :confirm => "Are you sure?" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>