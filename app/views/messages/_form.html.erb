<% semantic_form_for @message do |f| -%>
  <% f.inputs do %>
  	<%= f.input :name, :label => t(:name) %>
  	<%= f.input :email, :label => t(:email) %>
  	<%= f.input :company, :label => t(:company), :required=>false %>
  	<%= f.input :phone, :label => t(:phone), :required=>false %>
  	<%= f.input :subject, :label => t(:subject) %>
  	<%= f.input :body, :label => t(:mail_message) %>
  <% end %>
  <% f.buttons do %>
  	<%= f.commit_button t(:send) %>
  <% end %>
<% end -%>
